{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "start",
			"options": {
				"env": {
					"NODE_ENV": "production"
				}
			},
			"problemMatcher": []
		},
		{
			"label": "Knex migrate",
			"type": "shell",
			"command": "npx",
			"args": ["knex", "migrate:latest", "--knexfile", "db/connection"]
		}
	]
}
