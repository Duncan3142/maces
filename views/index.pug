extends layout

mixin eventView(event)
	article.event
		h2= event.title
		p= event.location
		p= event.when
		- descriptionParas = event.description.split('\n')
		each para in descriptionParas
			p= para
		each media in event.media
			ul
				li
					p= media.description

block content
	if error
		p Error fetching content.
	else if events.length
		h2 Please find our upcoming events below

		section.events
			each event in events
				+eventView(event)
	else
		p Watch this space for upcoming events.
