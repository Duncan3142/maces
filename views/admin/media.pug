extends ../layout

mixin mediaView(media)
	h2
		a(href=media.url) #{media.description}
	p= media.type
	p= media.name
	form(method='POST' action=`/admin/media/${media.id}/delete`)
		div
			button(type='submit') Delete

block content
	h1= title
	p Welcome to #[em Macmillan East Sheen].

	if error
		p Error fetching content.
	else if media.length
		p Available media:

		each medium in media
			+mediaView(medium)
	else
		p No media available.
